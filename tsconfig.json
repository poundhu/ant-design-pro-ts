{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "baseUrl": "./src",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "paths": {
            "components": ["src/components"],
            "utils": ["src/utils"],
            "assets": ["src/assets"],
            "common": ["src/common"],
            "services": ["src/services"],
            "interfaces": ["src/interfaces"],
            "layouts": ["src/layouts"]
        },
        "allowSyntheticDefaultImports": true
    }
}