{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "paths": {
            "components": ["src/components"],
            "utils": ["src/utils"],
            "assets": ["src/assets"],
            "common": ["src/common"],
            "services": ["src/services"]
        },
        "allowSyntheticDefaultImports": true
    }
}